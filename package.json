{
  "name": "type-safe-enum",
  "version": "1.0.0",
  "description": "A type-safe, flexible enum factory for TypeScript with runtime validation and type inference",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts"
    ]
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "typescript",
    "enum",
    "type-safe",
    "typesafe",
    "factory",
    "runtime",
    "validation"
  ],
  "author": "Elfre Valdes <elfrevaldes@gmail.com> (https://github.com/elfrevaldes)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/elfrevaldes/safe-enum.git"
  },
  "homepage": "https://github.com/elfrevaldes/safe-enum#readme",
  "bugs": {
    "url": "https://github.com/elfrevaldes/safe-enum/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.23",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.3.4",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
