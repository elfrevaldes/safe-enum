{
  "name": "type-safe-enum",
  "version": "1.0.2",
  "description": "A type-safe, flexible enum factory for TypeScript with runtime validation and type inference",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "typescript",
    "enum",
    "type-safe",
    "typesafe",
    "factory",
    "runtime",
    "validation"
  ],
  "author": "Elfre Valdes <elfrevaldes@gmail.com> (https://github.com/elfrevaldes)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/elfrevaldes/safe-enum.git"
  },
  "homepage": "https://github.com/elfrevaldes/safe-enum#readme",
  "bugs": {
    "url": "https://github.com/elfrevaldes/safe-enum/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.23",
    "@vitest/ui": "^3.1.4",
    "glob": "^11.0.2",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.0.0",
    "vitest": "^3.1.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
